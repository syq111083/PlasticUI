<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Demo.ViewModels"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        xmlns:plastic="clr-namespace:Plastic;assembly=Plastic"
        Title="MainWindow" 
        WindowStartupLocation="CenterScreen"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Height="600" 
        Width="800">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="plastic:Button">
            <Setter Property="Margin" Value="10,3" />
        </Style>
        <Style TargetType="plastic:TextBox">
            <Setter Property="Margin" Value="10,3,10,3" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel>
                <WrapPanel>
                    <plastic:Button Text="{Binding Text}"/>
                    <plastic:Button Theme="Secondary"/>
                    <plastic:Button Theme="Success"/>
                    <plastic:Button Theme="Danger"/>
                    <plastic:Button Theme="Warning" />
                    <plastic:Button Theme="Info"/>
                    <plastic:Button Theme="Light"/>
                    <plastic:Button Theme="Dark" />
                    <plastic:TextBox Width="200" FloatingLabel="姓名" />
                    <plastic:TextBox Width="200" Height="45.3"/>
                    <plastic:CheckBox />
                    <plastic:Range Width="200" Margin="5,0,0,0" />
                </WrapPanel>

                
            </StackPanel>
        </ScrollViewer>
        <Canvas Grid.Row="1">
            <Border BorderThickness="2" BorderBrush="Black">
                <i:Interaction.Behaviors>
                    <i:MouseDragElementBehavior ConstrainToParentBounds="True" />
                </i:Interaction.Behaviors>
                <Rectangle Fill="Red" Width="100" Height="100">

            </Rectangle>            
            </Border>
            <!--<Button Background="Blue" Width="100" Height="100">
                <i:Interaction.Behaviors>
                    <i:MouseDragElementBehavior />
                </i:Interaction.Behaviors>
            </Button>-->

        </Canvas>
    </Grid>
</Window>
